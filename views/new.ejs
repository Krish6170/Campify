<% layout('layout/boilerplate.ejs') %>
<div class="container" >
    <div class="row justify-content-center">
        
        <div class="col-6 text-center">
            <h2>New campground</h2>
            <form action="/Allcamps" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                <div class="form-floating mb-1">
                    <input type="text" class="form-control "  id="float" placeholder="title" name="Campgrounds[title]" required>
                    <label for="float ">Title</label>
                    <div class="invalid-feedback">
                        Can't be empty
                      </div>
                </div>
                
                    
                
                    
                <div class="form-floating mb-1">
                    <input type="text" class="form-control" id="location" placeholder="location" name="Campgrounds[location]" required>
                    <label for="floatingPassword">Location</label>
                    <div class="invalid-feedback">
                        Can't be empty
                      </div>
                </div>
                <div class="form-floating mb-1">
                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px" name="Campgrounds[description]" required></textarea>
                    <label for="floatingTextarea2">Description</label>
                    <div class="invalid-feedback">
                        Can't be empty
                      </div>
                  </div>
                <div class="form-floating mb-1">
                    <input type="number" class="form-control" id="price" placeholder="price" min="0" name="Campgrounds[price]" required>
                    <label for="image">Price</label>
                    <div class="invalid-feedback">
                        Enter Price
                      </div>
                </div>
                <div>
                    <input type="file" class="form-control mb-1" id="floatingimg" name="image" multiple >
                    <div class="invalid-feedback">
                        add file
                      </div>
                </div>
                <!-- <div class="form-floating mb-1">
                    <input type="url" class="form-control" id="image" placeholder="image" name="Campgrounds[image]" required>
                    <label for="image">Image</label>
                    <div class="invalid-feedback">
                        Enter Url
                    </div>
                </div> -->
            <button class="btn btn-primary">submit</button>    
            </form>
        

        </div>
    </div>
</div>


